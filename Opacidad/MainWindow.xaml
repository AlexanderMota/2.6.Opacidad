<Window x:Class="Opacidad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Opacidad"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="269" Width="990.833">
    <Grid>
        <Image
            x:Name="img1"
            Source="/img/surrealism.jpg" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            MouseEnter="img_MouseEnter"
            MouseLeave="img_MouseLeave"
            Opacity="0.5"/>
        <Image 
            x:Name="img2"
            Source="/img/surrealism2.jpg" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="320,0,0,0"
            MouseEnter="img_MouseEnter"
            MouseLeave="img_MouseLeave"
            Opacity="0.5"/>
        <Image 
            x:Name="img3"
            Source="/img/surrealism3.jpg" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="682,0,0,0"
            MouseEnter="img_MouseEnter"
            MouseLeave="img_MouseLeave"
            Opacity="0.5"/>
    </Grid>
</Window>
